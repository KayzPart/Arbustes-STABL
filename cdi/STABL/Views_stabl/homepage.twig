{% block body %}
	{{ include("Templates/header.twig") }}
	<div class="container">
		<h2>Bonjour
			{{humain.getHumain_login}}</h2>
		<section class="choix-tables">
			<form action="./choice" method="GET">
				<div class="tables">
					{% for i in 1..10 %}
						<label>
							<input type="radio" name="scoreParam1" value="{{i}}">
							<img class="click-table" src="./public/assets/ressources/click-{{i}}.png" alt="table-{{i}}">
						</label>
					{% endfor %}
					<label>
						<input type="radio" name="scoreParam1" value="-1">
						<img class="click-table" src="./public/assets/ressources/click-tables.png" alt="tables">
					</label>
				</div>

				<section class="display-radio">
					<div class="ordre-desordre">
						<ul>
							<li>
								<input type="radio" id="ordre" name="scoreParam2" value="1" checked>
								<label for="ordre">
									<p class="inlet">
										<span class="text__effect">
											ORDRE
										</span>
									</p>
									<span class="outer">
										<span class="inner"></span>
									</span>
								</label>
							</li>
							<li>
								<input type="radio" id="desordre" name="scoreParam2" value="2">
								<label for="desordre">
									<p class="inlet">
										<span class="text__effect">
											DÉSORDRE
										</span>
									</p>
									<span class="outer">
										<span class="inner"></span>
									</span>
								</label>
							</li>
						</ul>
					</div>
					<div class="aide">
						<ul>
							<li>
								<input type="radio" id="billes" name="scoreParam3" value="1" checked>
								<label for="billes">
									<p class="inlet">
										<span class="text__effect">
											Tableau de billes
										</span>
									</p>
									<span class="outer">
										<span class="inner"></span>
									</span>
								</label>
							</li>
							<li>
								<input type="radio" id="avt-apr" name="scoreParam3" value="2">
								<label for="avt-apr">
									<p class="inlet">
										<span class="text__effect">
											Avant / Après
										</span>
									</p>
									<span class="outer">
										<span class="inner"></span>
									</span>
								</label>
							</li>
							<li>
								<input type="radio" id="aucune" name="scoreParam3" value="0">
								<label for="aucune">
									<p class="inlet">
										<span class="text__effect">
											Aucune Aide
										</span>
									</p>
									<span class="outer">
										<span class="inner"></span>
									</span>
								</label>
							</li>
						</ul>
					</div>
				</section>

				<input type="hidden" name="id" value="{{humain.getHumain_id}}">
				<input type="hidden" name="scoreValeur" value="0">
				<input type="hidden" name="scoreOutilId" value="{{outils.getOutil_id}}">

				<div id="submit-btn">
					<input type="submit" name="submit" id="letsgo" value="C'EST PARTI !">
				</div>
			</form>
		</section>
	</div>
	{{ include("Templates/footer.twig") }}
{% endblock %}
